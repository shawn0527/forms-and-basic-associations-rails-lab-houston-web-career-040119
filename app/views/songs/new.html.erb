<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist %>
  <%= f.text_field :artist_name %>
  <br>
  <%=f.label :genre %>
  <%=f.collection_select(:genre_id, Genre.all, :id, :name)%>
  <br>
  <input type='text', name='song[note_contents][]', id='song_notes_1'></input>
  <input type='text', name='song[note_contents][]', id='song_notes_2'></input>
  <% @song.notes.each_with_index do |note, index| %>
  <%=f.label :content %>
  <%=f.text_field :note_contents, multiple: true id :"song_notes_#{index+1}" %>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>
